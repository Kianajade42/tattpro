
<h1>Editing <%= @tattoo.name %> </h1>
<form action="/tattoos/<%= @tattoo.id %>" method="post">
    <input type="hidden" value="PATCH" name="_method">
    <b>Name: <input type="text" name="tattoo[name]" value="<%= @tattoo.name %>"><br>
    <b>Client: <input type="text" name="tattoo[client]" value="<%= @tattoo.client %>"><br>
    <b>Placement: <input type="text" name="tattoo[placemnt]" value="<%= @tattoo.placemnt %>"><br>
    <b>Description:<input type="text" name="tattoo[description]" value="<%= @tattoo.description %>"><br>
    <input type="submit" value="Edit portfolio"> 

</form>